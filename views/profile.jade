extends layout
append content
    h1.page-header 个人信息
    a#btn-edit-profile.btn.btn-default
        span.glyphicon.glyphicon-edit
        |编辑
    .row
        .col-sm-6.col-md-7
            fieldset(disabled)
                form#form-profile.form-horizontal(role='form',action='/update_profile', method='post')
                    .form-group
                        label.control-label.col-sm-2.col-md-3(for="input-email") 邮箱
                        .col-sm-4.col-md-4
                            input.form-control#input-email(name='email',type='email',placeholder='邮箱',value='#{profile.email}')
                    .form-group
                        label.control-label.col-sm-2.col-md-3(for='input-nickname') 昵称
                        .col-sm-4.col-md-4
                            input.form-control#input-nickname(name='nickname',type='text',placeholde='昵称',value='#{profile.nickname}')
                    .form-group
                        label.control-label.col-sm-2.col-md-3(for='input-sex') 性别
                        .col-sm-4.col-md-4
                            - if (profile.sex === 1)
                                input(type='radio',name='sex',value='1',checked)
                                |男 
                                input(type='radio',name='sex',value='0') 
                                |女
                            - else
                                input(type='radio',name='sex',value='1')
                                |男 
                                input(type='radio',name='sex',value='0',checked) 
                                |女
                    .form-group
                        label.control-label.col-sm-2.col-md-3(for='input-birthday') 生日
                        .col-sm-4.col-md-4
                            input.form-control(type='text',name='birthday',value='#{profile.birthday}')
                    .form-group
                        label.control-label.col-sm-2.col-md-3(for='input-city') 所在城市
                        .col-sm-4.col-md-4
                            input#input-city.form-control(type='text',name='city',value='#{profile.city}')
                    .form-group
                        label.control-label.col-sm-2.col-md-3(for='input-hometown') 故乡
                        .col-sm-4.col-md-4
                            input#input-hometown.form-control(type='text',name='hometown',value='#{profile.hometown}')
                    .form-group
                        label.control-label.col-sm-2.col-md-3(for='input-school') 学校
                        .col-sm-4.col-md-4
                            input#input-school.form-control(type='school', name='school',value='#{profile.school}')
                    .form-group
                        label.control-label.col-sm-2.col-md-3(for='input-intro') 一句话介绍自己
                        .col-sm-4.col-md-4
                            input#input-school.form-control(type='intro', name='intro',value='#{profile.intro}')
                    //- .col-sm-offset-2.col-md-offset-3
                        button#btn-update-profile-confirm.btn.btn-default(type='button') 保存
                        button#btn-update-profile-cancel.btn.btn-default(type='button') 取消
append javascript
    script(src="/javascripts/profile.js", type="text/javascript")
