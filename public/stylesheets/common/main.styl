//Move down content because we have a fixed navbar that is 50px tall
body
    padding-top 50px

//Global add-ons
.sub-header
    padding-bottom 10px
    border-bottom 1px solid #eee

//sidebar

//Hide for mobile, show later
.sidebar
    display none
@media (min-width: 768px)
    .sidebar 
        position fixed
        top 51px
        bottom 0
        left 0
        z-index 1000
        display block
        padding 20px
        overflow-x hidden
        overflow-y auto
        background-color #f5f5f5
        border-right 1px solid #eee

//Sidebar navigation
.nav-sidebar
    margin-right -21px
    margin-bottom 20px
    margin-left -20px
.nav-sidebar > li > a
    padding-right 20px
    padding-left 20px
    
.nav-sidebar > .active > a
    color #fff
    background-color #428bca


.main 
    padding 20px
@media (min-width 768px)
    .main 
        padding-right 40px
        padding-left 40px

.main.page-header
